<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/kejichangtan_listHead_hotTie"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="热帖" 
        android:background="@drawable/header_middle"/>
    <TextView 
        android:id="@+id/kejichangtan_listHead_newRespon"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="最新回复"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/header_left"
        android:layout_toLeftOf="@id/kejichangtan_listHead_hotTie"/>
    <TextView 
        android:id="@+id/kejichangtan_listHead_newFaBiao"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="最新发表"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/header_right"
        android:layout_toRightOf="@id/kejichangtan_listHead_hotTie"/>

</RelativeLayout>
