<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_list_height"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/newsPic"
            android:layout_width="@dimen/pic_item_list_width"
            android:layout_height="@dimen/pic_item_list_height"
            android:layout_marginLeft="@dimen/pic_item_list_margin_left"
            android:layout_marginTop="@dimen/pic_item_list_margin_right"
            android:background="@color/black" />

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/newsPic"
            android:layout_marginLeft="@dimen/title_item_list_margin_left"
            android:layout_toRightOf="@id/newsPic"
            android:text="苹果A10Fusion芯片解析,iPhone7/Plus性能炸裂全靠它"
            android:textColor="@color/black"
            android:textSize="16sp" />
		<TextView 
		    android:id="@+id/time"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="9月17日"
		    android:textSize="12sp"
		    android:layout_toRightOf="@id/newsPic"
		    android:layout_alignBottom="@id/newsPic"
		    android:layout_marginLeft="@dimen/time_item_list_margin_left"
		    android:textColor="@color/gray_heavy"
		    />
		<TextView 
		    android:id="@+id/comment"
		    android:layout_width="@dimen/comment_item_list_width"
		    android:layout_height="wrap_content"
		    android:text="25"
		    android:textSize="10sp"
		    android:layout_alignBottom="@id/newsPic"
		    android:layout_marginLeft="@dimen/comment_item_list_margin_left"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="@dimen/comment_item_list_margin_right"
		    android:gravity="center"
		    android:textColor="@color/gray_heavy"
		    android:drawableLeft="@drawable/quan_comment"
		    />
    </RelativeLayout>

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" >
    </View> -->

</LinearLayout>