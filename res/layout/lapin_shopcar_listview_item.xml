<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/shopcar_listviewitem_payone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/address_checkbox_select"
        android:button="@null"
        android:checked="true" />

    <ImageView
        android:id="@+id/shopcar_listviewitem_img"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shopcar_listviewitem_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="恢复大师来开发大神了fdakjfhda;l" />

        <EditText
            android:id="@+id/shopcar_listviewitem_editnum"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/shopcar_listviewitem_unitprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="¥8300" />

            <TextView
                android:id="@+id/shopcar_listviewitem_checknum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X1" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>