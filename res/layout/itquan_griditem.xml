<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp" 
        android:layout_gravity="center"
        android:background="@drawable/me_list">
        <ImageView
            android:id="@+id/itquan_griditem_img" 
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/quan_jike_night"/>
        <TextView 
            android:id="@+id/itquan_griditem_tvAbove" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/itquan_griditem_img"
            android:text="科技畅谈"
            android:textSize="@dimen/wenzi_Style_3"
            android:layout_toRightOf="@id/itquan_griditem_img"/>
        
        <TextView 
            android:id="@+id/itquan_griditem_tvBelow" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+22"
            android:layout_marginTop="0dp"
            android:textColor="@color/red"
            android:textSize="@dimen/wenzi_Style_3"
            android:layout_toRightOf="@id/itquan_griditem_img"
            android:layout_below="@id/itquan_griditem_tvAbove"
            android:layout_alignLeft="@id/itquan_griditem_tvAbove"/>
    </RelativeLayout>
    

</LinearLayout>
